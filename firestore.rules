// Firestore Security Rules for Smart Car Tracker
// Add these rules to your Firebase Console under Firestore Database > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user data
    match /users/{userId} {
      allow read, write: if request.auth.uid != null && request.auth.token.email == userId;
      
      // Users can read and write their own devices
      match /devices/{deviceId} {
        allow read, write: if request.auth.uid != null && request.auth.token.email == userId;
        
        // Users can read and write vehicles for their devices
        match /vehicles/{vehicleId} {
          allow read, write: if request.auth.uid != null && request.auth.token.email == userId;
          
          // Users can read and write maintenance items for their vehicles
          match /maintenanceItems/{itemId} {
            allow read, write: if request.auth.uid != null && request.auth.token.email == userId;
          }
        }
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
